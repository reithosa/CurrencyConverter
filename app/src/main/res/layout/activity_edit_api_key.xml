<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_API_key">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введите API-ключ Open Exchange Rates"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/ApiKey"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_api_key"
                android:gravity="center"
                android:layout_marginTop="60dp"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:hint="Например: 1234aaa5a6789bb1ab234aa55d00d022"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:digits="abcdefghijklmnopqrstuvwxyz0123456789"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSendAPI"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@drawable/btn_edit_api_key"
            android:text="Начать"
            android:textSize="16sp"
            android:textColor="@drawable/text_edit_api_key"
            app:strokeWidth="2dp"
            app:strokeColor="@drawable/text_edit_api_key"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="@+id/ApiKey"
            app:layout_constraintTop_toBottomOf="@+id/ApiKey" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>